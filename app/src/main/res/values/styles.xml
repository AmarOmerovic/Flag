<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="answerButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/answerButtonColor</item>
        <item name="android:fontFamily">@font/alike</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeMaxTextSize">20dp</item>
        <item name="autoSizeMinTextSize">16dp</item>
        <item name="autoSizeStepGranularity">2dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="cornerRadius">4dp</item>
        <item name="iconGravity">end</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="controlButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:enabled">false</item>
        <item name="android:fontFamily">@font/alike</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeMaxTextSize">24dp</item>
        <item name="autoSizeMinTextSize">20dp</item>
        <item name="autoSizeStepGranularity">2dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="cornerRadius">4dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="headerText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:fontFamily">@font/alike</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>