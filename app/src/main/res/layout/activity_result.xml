<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    tools:context=".ResultActivity">

    <com.google.android.material.textview.MaterialTextView
        style="@style/headerText"
        android:layout_weight="3"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="36dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:text="@string/result"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30sp"
        android:layout_weight="1"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25sp"
            android:layout_weight="0.6"
            android:scaleType="fitCenter"
            android:src="@drawable/trophy" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="1.2"
            android:autoSizeMaxTextSize="36dp"
            android:autoSizeMinTextSize="32dp"
            android:autoSizeStepGranularity="2dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/alike"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="10"
            android:shadowDy="6"
            android:shadowRadius="10"
            android:text="@string/hey_congratulations"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="1.2"
            android:autoSizeMaxTextSize="28dp"
            android:autoSizeMinTextSize="20dp"
            android:autoSizeStepGranularity="2dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/alike"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="10"
            android:shadowDy="6"
            android:shadowRadius="10"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck"
            tools:text="Amar" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="13dp"
            android:layout_weight="1.23"
            android:autoSizeMaxTextSize="26dp"
            android:autoSizeMinTextSize="18dp"
            android:autoSizeStepGranularity="2dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/alike"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="italic"
            tools:ignore="TextContrastCheck"
            tools:text="Your Score: 0/10" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/finishButton"
            style="@style/controlButtons"
            android:layout_marginBottom="15dp"
            android:layout_weight="1.12"
            android:enabled="true"
            android:text="@string/finish" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>